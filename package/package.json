{
  "name": "micro-modal",
  "version": "0.0.4",
  "description": "Teeny-tiny super-flexible modal for React.",
  "main": "dist/index.js",
  "files": [
    "dist/lib/"
  ],
  "license": "MIT",
  "repository": "https://github.com/estrattonbailey/micro-modal",
  "author": "estrattonbailey",
  "scripts": {
    "size": "babili dist/ | gzip-size --raw",
    "lint": "standard 'index.js'",
    "prebuild": "npm run lint",
    "build": "npm run build:index && npm run build:lib && npm run size",
    "watch": "parallelshell 'npm run watch:index' 'npm run watch:lib'",
    "build:index": "babel index.js -d dist/",
    "watch:index": "babel -w index.js -d dist/",
    "watch:lib": "babel -w lib/*.js -d dist",
    "build:lib": "babel lib -d dist/lib",
    "copy": "rm README.md ; cp ../README.md ./"
  },
  "keywords": [
    "react",
    "modal"
  ],
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.21.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-babili": "0.0.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.23.0",
    "babili": "^0.1.4",
    "gzip-size-cli": "^2.0.0",
    "parallelshell": "^3.0.1",
    "standard": "^8.6.0"
  },
  "peerDependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "dependencies": {
    "tarry.js": "^1.0.2"
  }
}
